<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/custom_flight_item_top"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="0.5"
            app:srcCompat="@drawable/ic_flight_takeoff_white_24dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtSoHieu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_bold"
                android:textSize="20sp"
                android:gravity="center"
                android:text="VJ147" />

            <TextView
                android:id="@+id/txtChuyenDi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:gravity="center"
                android:text="Ha Noi - Da Nang" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtGiaHoacTrangThai"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/dark_blue"
            android:fontFamily="@font/roboto_bold"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:gravity="center"
            android:text="1,234,000 Ä‘" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_flight_item_bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/gray"
                android:fontFamily="@font/roboto_bold"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:gravity="center"
                android:text="@string/thoigian_di_dukien" />

            <TextView
                android:id="@+id/txtTimeStartExpected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:fontFamily="@font/roboto_bold"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:gravity="center"
                android:text="10:15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/gray"
                android:fontFamily="@font/roboto_bold"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:gravity="center"
                android:text="@string/thoigian_den_dukien" />

            <TextView
                android:id="@+id/txtTimeEndExpected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:fontFamily="@font/roboto_bold"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:gravity="center"
                android:text="12:25" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>