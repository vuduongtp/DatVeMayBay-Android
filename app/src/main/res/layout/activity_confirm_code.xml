<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mail.ConfirmCodeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_confirmBooking"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#1F4788"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        app:title="Xác nhận đặt chỗ"
        app:titleTextColor="@color/colorBackgroundMain" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E8E5E5"
        android:textColor="@color/dark_blue"
        android:gravity="center"
        android:padding="10dp"
        android:text="Mã xác nhận đã được gửi về email của bạn, \nhãy nhập mã và xác nhận đặt vé."
        android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:text="Mã xác nhận:"
        android:textColor="@color/colorMain"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/txtConfirmCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="10dp"
        android:background="@drawable/custome_edittext_check"
        android:ems="10"
        android:inputType="phone" />

    <TextView
        android:id="@+id/txtErrorConfirmCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:text=""
        android:textColor="#ff00" />

    <Button
        android:id="@+id/btnConfirmCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/custom_btn_check"
        android:text="Xác nhận"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</LinearLayout>